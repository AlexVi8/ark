{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "cargo build && scripts/post-install.sh",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "rust: cargo build"
        },
        {
            "type": "cargo",
            "command": "test",
            "problemMatcher": [
                "$rustc",
                "$rust-panic"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "label": "rust: cargo test"
        }
    ]
}
